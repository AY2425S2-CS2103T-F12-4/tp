<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<VBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      spacing="10" alignment="CENTER_LEFT"
      prefWidth="320" prefHeight="400"
      styleClass="pane-with-border">

    <padding>
        <Insets top="10" right="10" bottom="10" left="10" />
    </padding>

    <Label text="*Dates shown are the tracking start dates you set. Recurring reminders (like birthdays) are handled automatically."
           style="-fx-font-size: 11px; -fx-font-style: italic; -fx-text-fill: #666;" />


    <!--
      ListView that displays the Anniversaries.
      Could also use a TableView with multiple columns
      if you want date/name/description columns, etc.
    -->
    <!-- Title -->
    <Label text="Anniversaries"
           style="-fx-font-size: 16px; -fx-font-weight: bold;" />

    <!-- Description -->
    <Label text="* Dates shown are the tracking start dates you set. Recurring reminders (like birthdays) are handled automatically."
           wrapText="true"
           style="-fx-font-size: 11px; -fx-font-style: italic; -fx-text-fill: #666;" />

    <!-- Table -->
    <TableView fx:id="anniversaryTable" prefHeight="360">
        <columns>
            <TableColumn fx:id="dateColumn" text="Tracking Start Date" prefWidth="130"/>
            <TableColumn fx:id="nameColumn" text="Anniversary Name" prefWidth="150"/>
            <TableColumn fx:id="typeColumn" text="Anniversary type" prefWidth="180"/>
            <TableColumn fx:id="descriptionColumn" text="Anniversary Description" prefWidth="180"/>
            <TableColumn fx:id="typeDescriptionColumn" text="Anniversary Type Description" prefWidth="180"/>
        </columns>
    </TableView>

    <!--
      A simple Close button to hide the window
    -->
    <Button text="Close" onAction="#handleClose" />
</VBox>
